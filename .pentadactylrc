set guioptions+=mTB


"set the default search engine`"
set defsearch=duckduckgo


"set the scroll delay, the amoutn scrolled and the editor"
set scrollsteps=1
set scrolltime=1
set editor='xterm -e "vim -f +<line> +\"sil! call cursor(0, <column>)\" <file>"'


"Set the search, the findcase to accept lower case, and the hintkey defaults to homerow"
set incfind
set findcase=smart
set hintkeys=asdfg;lkjh
highlight -a Hint text-transform: uppercase


"Shortcuts for commonly used pages"
map -b atlas :tabopen http://atlasserver.kingsu.ca<cr>
map -b edit :tabopen http://atlasserver.kingsu.ca/editatlas.php<cr>
map -b goog :tabopen http://www.google.ca/<cr>
map -b spot :tabopen https://play.spotify.com/browse/<cr>
map -b gmail :tabopen http://gmail.google.com<cr>


"Rebind page navigation keys"
map -b j 8h
map -b k 8j
map -b ; 8l
map -b l 8k


"Rebind tab navigation keys"
map -b <C-n> <C-p>
map -b <C-p> <C-n>


" Make Ctrl-x, Ctrl-c, and Ctrl-v work as normal
" Map 'Stop page loading' to Ctrl-s
" Map 'Pass-next' to Ctrl-q
map -b <C-q> <C-v>
map -b <C-s> <C-c>

" Map 'Pass-next' to Ctrl-q
imap -b <C-q> <C-v>

" Map 'Stop page loading' to Ctrl-s
imap -b <C-s> <C-c>

map -b <C-c> <C-v><C-c>
map -b <C-v> <C-v><C-v>
map -b <C-x> <C-v><C-x>

"cnoremap <C-c> <C-v><C-c>
cmap -b <C-v> <C-v><C-v>
cmap -b <C-x> <C-v><C-x>

imap -b <C-c> <C-v><C-c>
imap -b <C-v> <C-v><C-v>
imap -b <C-x> <C-v><C-x>





"/:* map -b ; : */"
